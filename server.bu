      password_hash: $y$j9T$rzl844KSCnYmas54mbGHq/$ALtFLZtbrSx8ouoJHaYcmNAL7KwgKcGwrgeTMz.cYY8
      groups:
        - docker
        - wheel
      shell: /bin/bash
      ssh_authorized_keys:
